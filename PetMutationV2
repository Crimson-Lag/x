-- Pet Mutation Finder: Fixed for one ESP active at a time
local Players = game:GetService("Players")
local player = Players.LocalPlayer
local PlayerGui = player:WaitForChild("PlayerGui")
local Workspace = game:GetService("Workspace")
local TweenService = game:GetService("TweenService")
local RunService = game:GetService("RunService")

-- üß¨ Mutation types
local mutations = {
	"Shiny", "Inverted", "Frozen", "Windy", "Golden", "Mega", "Tiny",
	"Tranquil", "IronSkin", "Radiant", "Rainbow", "Shocked", "Ascended"
}
local currentMutation = mutations[math.random(#mutations)]
local espVisible = true

-- üñ•Ô∏è GUI Setup
local gui = Instance.new("ScreenGui")
gui.Name = "PetMutationFinder"
gui.ResetOnSpawn = false
gui.Parent = PlayerGui

local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 220, 0, 120)
frame.Position = UDim2.new(0.4, 0, 0.4, 0)
frame.BackgroundColor3 = Color3.fromRGB(0, 128, 128)
frame.BackgroundTransparency = 0.1
frame.BorderSizePixel = 0
frame.Active = true
frame.Draggable = true
frame.Parent = gui

Instance.new("UICorner", frame).CornerRadius = UDim.new(0, 12)

local title = Instance.new("TextLabel", frame)
title.Size = UDim2.new(1, 0, 0, 30)
title.Text = "üî¨ Pet Mutation Finder"
title.TextColor3 = Color3.fromRGB(255, 255, 255)
title.BackgroundTransparency = 1
title.Font = Enum.Font.FredokaOne
title.TextSize = 18
title.Parent = frame

-- ‚ùå Close Button
local closeBtn = Instance.new("TextButton")
closeBtn.Size = UDim2.new(0, 24, 0, 24)
closeBtn.Position = UDim2.new(1, -28, 0, 4)
closeBtn.BackgroundColor3 = Color3.fromRGB(255, 0, 0)
closeBtn.Text = "‚ùå"
closeBtn.Font = Enum.Font.FredokaOne
closeBtn.TextSize = 14
closeBtn.TextColor3 = Color3.new(1, 1, 1)
closeBtn.Parent = frame

Instance.new("UICorner", closeBtn).CornerRadius = UDim.new(0, 6)

closeBtn.MouseEnter:Connect(function()
	TweenService:Create(closeBtn, TweenInfo.new(0.2), {
		BackgroundColor3 = Color3.fromRGB(200, 0, 0)
	}):Play()
end)

closeBtn.MouseLeave:Connect(function()
	TweenService:Create(closeBtn, TweenInfo.new(0.2), {
		BackgroundColor3 = Color3.fromRGB(255, 0, 0)
	}):Play()
end)

closeBtn.MouseButton1Click:Connect(function()
	gui:Destroy()
	removeAllMutationESP()
end)

-- üéõÔ∏è Button creator
local function createButton(text, yPos, color)
	local btn = Instance.new("TextButton")
	btn.Size = UDim2.new(0.9, 0, 0, 35)
	btn.Position = UDim2.new(0.05, 0, 0, yPos)
	btn.BackgroundColor3 = color
	btn.Text = text
	btn.Font = Enum.Font.FredokaOne
	btn.TextSize = 16
	btn.TextColor3 = Color3.new(1, 1, 1)
	btn.AutoButtonColor = false
	btn.Parent = frame

	Instance.new("UICorner", btn).CornerRadius = UDim.new(0, 6)
	local stroke = Instance.new("UIStroke", btn)
	stroke.Color = Color3.fromRGB(0, 0, 0)
	stroke.Thickness = 1.2

	btn.MouseEnter:Connect(function()
		TweenService:Create(btn, TweenInfo.new(0.2), {BackgroundColor3 = color:Lerp(Color3.new(1,1,1), 0.2)}):Play()
	end)
	btn.MouseLeave:Connect(function()
		TweenService:Create(btn, TweenInfo.new(0.2), {BackgroundColor3 = color}):Play()
	end)

	return btn
end

local rerollBtn = createButton("üé≤ Mutation Reroll", 40, Color3.fromRGB(128, 0, 128))
local toggleBtn = createButton("üëÅ Toggle Mutation ESP", 80, Color3.fromRGB(128, 128, 0))

-- üîç Find all mutation machines
local function getMutationMachines()
	local results = {}
	for _, obj in pairs(Workspace:GetDescendants()) do
		if obj:IsA("Model") and obj.Name:lower():find("mutation") then
			local part = obj:FindFirstChildWhichIsA("BasePart")
			if part then
				table.insert(results, part)
			end
		end
	end
	return results
end

-- üí° ESP manager
local activeESP -- track current ESP so only one is shown

local function removeAllMutationESP()
	if activeESP then
		activeESP:Destroy()
		activeESP = nil
	end
end

local function applyMutationESP(part)
	removeAllMutationESP()
	local gui = Instance.new("BillboardGui", part)
	gui.Name = "MutationESP"
	gui.Adornee = part
	gui.Size = UDim2.new(0, 200, 0, 40)
	gui.StudsOffset = Vector3.new(0, 3, 0)
	gui.AlwaysOnTop = true

	local label = Instance.new("TextLabel", gui)
	label.Size = UDim2.new(1, 0, 1, 0)
	label.BackgroundTransparency = 1
	label.Font = Enum.Font.GothamBold
	label.TextSize = 24
	label.TextStrokeTransparency = 0.3
	label.TextStrokeColor3 = Color3.new(0, 0, 0)
	label.Text = currentMutation

	activeESP = gui

	-- üåà Rainbow animation
	local hue = 0
	local connection
	connection = RunService.RenderStepped:Connect(function()
		if not gui or not gui.Parent then
			connection:Disconnect()
			return
		end
		if espVisible then
			hue = (hue + 0.01) % 1
			label.TextColor3 = Color3.fromHSV(hue, 1, 1)
		end
	end)
end

-- ‚ôªÔ∏è Mutation reroll with single ESP
local function animateMutationReroll()
	rerollBtn.Text = "‚è≥ Rerolling..."
	local machines = getMutationMachines()
	if #machines == 0 then return end

	local duration = 2
	local interval = 0.1
	local chosen = machines[math.random(#machines)]

	for i = 1, math.floor(duration / interval) do
		local temp = mutations[math.random(#mutations)]
		if activeESP and activeESP:FindFirstChildOfClass("TextLabel") then
			activeESP.TextLabel.Text = temp
		end
		wait(interval)
	end

	currentMutation = mutations[math.random(#mutations)]
	applyMutationESP(chosen)
	rerollBtn.Text = "üé≤ Mutation Reroll"
end

-- üü° Toggle ESP visibility
toggleBtn.MouseButton1Click:Connect(function()
	espVisible = not espVisible
	if activeESP then
		activeESP.Enabled = espVisible
	end
end)

-- üîÅ Button hook
rerollBtn.MouseButton1Click:Connect(animateMutationReroll)
